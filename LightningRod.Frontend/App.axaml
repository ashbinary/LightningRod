<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LightningRod.Frontend.App"
             xmlns:local="using:LightningRod.Frontend"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <FontFamily x:Key="DefaultFontFamily">avares://LightningRod.Frontend/Assets/Fonts/#Noto Sans</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml" />
        <StyleInclude Source="avares://LightningRod.Frontend/Assets/Static.xaml"/>
    </Application.Styles>
</Application>