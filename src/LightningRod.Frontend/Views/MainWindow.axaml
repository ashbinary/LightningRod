<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LightningRod.Frontend.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="740" Height="640"
        CanResize="False"
        x:Class="LightningRod.Frontend.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LightningRod.Frontend">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Top Row for General Options and ROM Information -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- New Horizontal StackPanel -->
        <StackPanel Orientation="Horizontal" Margin="15,5,15,0" Grid.Row="0" Grid.ColumnSpan="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side Options -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="LightningRod " 
                            Margin="0,3,0,0"
                            HorizontalAlignment="Left"
                            Foreground="#FFFFFF"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="Transparent"/>
                    <TextBlock Text="{Binding VersionString}" 
                            Margin="0,3,0,0"
                            Foreground="#FFFFFF"
                            HorizontalAlignment="Left"
                            FontSize="16"
                            Background="Transparent"/>
                    <TextBlock Text=" | @ashbinary_" 
                            Margin="0,3,0,0"
                            HorizontalAlignment="Left"
                            FontSize="16"
                            Foreground="#4f4f4f"
                            Background="Transparent"/>
                </StackPanel>

                <!-- Right Side Options -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" >
                    <TextBlock Text="RNG Seed " 
                            Margin="0,3,0,0"
                            HorizontalAlignment="Right" 
                            Foreground="#FFFFFF"
                            FontSize="16"
                            Background="Transparent"/>
                    <NumericUpDown Value="{Binding RandomizerSeed, Mode=TwoWay}"
                            Margin="0,0,0,0" 
                            HorizontalAlignment="Right" 
                            AllowSpin="False"
                            Foreground="#FFFFFF"
                            FontSize="16"
                            Height="30"
                            Width="165"
                            Minimum="1000000000000000"
                            Maximum="9999999999999999"
                            ShowButtonSpinner="False"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,5,15,0" Grid.Row="1" Grid.ColumnSpan="3">
            <!-- ROM Information Group -->
            <StackPanel Width="350" Margin="0,0,10,0">
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10,5,10,10">
                    <StackPanel>
                        <CheckBox Content="Use RomFS Directory" HorizontalAlignment="Center" Height="35" Margin="0,0,0,5" IsCheckedChanged="SwapRomFSandNSPInput" IsChecked="{Binding UseRomFSInstead, Mode=TwoWay}" IsEnabled="{Binding !IsBaseLoaded, Mode=OneWay}"/>
                        <Button Name="LoadBaseNSP" Content="Load Base (.nsp/.xci File)" Height="35" Width="300" Margin="0,0,0,5" Click="HandleNSPButtonsAsync" IsEnabled="{Binding !IsBaseLoaded, Mode=OneWay}"/>
                        <StackPanel Orientation="Horizontal" Width="350" Margin="20,0,10,0">
                            <Button Name="LoadUpdateNSP" Content="Load Update" Height="35" Width="147.5" Margin="5,0,0,5" Click="HandleNSPButtonsAsync" IsEnabled="{Binding !IsUpdateLoaded, Mode=OneWay}" IsVisible="{Binding !UseRomFSInstead, Mode=OneWay}"/>
                            <Button Name="LoadDLCNSP" Content="Load DLC" Height="35" Width="147.5" Margin="5,0,0,5" Click="HandleNSPButtonsAsync" IsEnabled="{Binding !IsDLCLoaded, Mode=OneWay}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Control Buttons -->
            <StackPanel HorizontalAlignment="Right" Width="350" Margin="0,0,10,0">
                <Button Content="Load Game Data" Width="350" Height="43" Click="SendDataToBackend" IsEnabled="{Binding IsBaseLoaded, Mode=OneWay}" Margin="0,0,10,5"/>
                <Button Name="RandomizeOpt" Content="Randomize + Save" Width="350" Height="43" Click="StartRandomizer" IsEnabled="{Binding GameDataLoaded, Mode=OneWay}" Margin="0,0,10,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Save Config" Width="172.5" Click="ExportOptions" Height="43" IsEnabled="{Binding IsBaseLoaded, Mode=OneWay}" Margin="0,0,5,0"/>
                    <Button Content="Load Config" Width="172.5" Click="ImportOptions" Height="43" IsEnabled="{Binding IsBaseLoaded, Mode=OneWay}" Margin="0,0,5,0"/> 
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="2" SelectedIndex="6" Margin="10,5,10,10" HorizontalAlignment="Left"> <!-- IsEnabled="{Binding IsBaseLoaded, Mode=OneWay}">-->
            <!-- Tab Items -->
            <TabItem Header="Weapon Kits">
                <StackPanel Orientation="Horizontal" Margin="5,20,5,10">
                    <!-- General Options Group -->
                    <StackPanel Width="350" Margin="0,0,5,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <CheckBox Content="Randomize Weapon Kits" IsChecked="{Binding RandomizeKits, Mode=TwoWay}"/>
                                <TextBlock Text="Sub Weapon Selection" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Include Hero Mode Sub Weapons" IsChecked="{Binding HeroSubSelection, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Include Unused &quot;Big&quot; Splat Bomb" IsChecked="{Binding CoopSplatBomb, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This went unused throughout the game's life, intended for Salmon Run, but still works completely as intended. Depending on the version of the game, it will either show up as a Splat Bomb or as a Smallfry without an icon."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Include All Sub Weapons" IsChecked="{Binding AllSubWeapons, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FFEE0070">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This is very prone to crashing when a weapon is selected! Use at your own risk."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Text="Special Weapon Selection" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Include Hero Mode Splashdown" IsChecked="{Binding HeroModeSuperLanding, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Include Rainmaker" IsChecked="{Binding UseRainmaker, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This includes both the Rainmaker and Modified Rainmaker (after v5.0.0). Highly likely to softlock before v5.0.0."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Include All Specials" IsChecked="{Binding UseAllSpecials, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FFEE0070">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This has a very high chance of crashing the game, especially regarding the Side Order specials and specials intended for Rivals."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Width="350" Margin="5,0,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Miscellaneous" FontWeight="Bold" Margin="0,5,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Minimum PFS:" Margin="0,5,10,5"/>
                                    <Slider x:Name="MinPFS"
                                        Minimum="140"
                                        Maximum="190"
                                        Value="{Binding MinimumPFS, Mode=TwoWay}"
                                        Margin="0,5,0,5"
                                        TickFrequency="10"
                                        IsSnapToTickEnabled="True"
                                        Width="150"/>
                                    <TextBlock Text="{Binding MinimumPFS}" Margin="10,5,0,5"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Maximum PFS:" Margin="0,5,10,5"/>
                                    <Slider x:Name="MaxPFS"
                                        Minimum="200"
                                        Maximum="250"
                                        Value="{Binding MaximumPFS, Mode=TwoWay}"
                                        Margin="0,5,0,5"
                                        TickFrequency="10"
                                        IsSnapToTickEnabled="True"
                                        Width="150"/>
                                    <TextBlock Text="{Binding MaximumPFS}" Margin="10,5,0,5"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Disable PFS Increments" IsChecked="{Binding NoPFSIncrementation, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This allows weapons to have any PFS between the desired values instead of all PFS being divisible by 10, such as 188p or 204p for special."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <CheckBox Content="Match Unscoped and Scoped Charger Kits" IsChecked="{Binding MatchPeriscopeKits, Mode=TwoWay}" IsEnabled="{Binding RandomizeKits, Mode=OneWay}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    
                </StackPanel>
            </TabItem>
            <TabItem Header="VS Stages">
                <StackPanel Orientation="Horizontal" Margin="5,20,5,10">
                    <!-- General Options Group -->
                    <StackPanel Width="350" Margin="0,0,5,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Stage Layout" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Tweak Stage Layouts" IsChecked="{Binding TweakStageLayouts, Mode=TwoWay}"/>
                                <StackPanel Orientation="Horizontal" IsEnabled="{Binding TweakStageLayouts, Mode=OneWay}">
                                    <TextBlock Text="Randomization Severity:" Margin="0,5,10,5"/>
                                    <Slider x:Name="TweakAmount"
                                        Minimum="1"
                                        Maximum="10"
                                        Value="{Binding TweakLevel, Mode=TwoWay}"
                                        Margin="0,5,0,5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Width="100"/>
                                    <TextBlock Text="{Binding TweakLevel}" Margin="10,5,0,5"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,-5,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This controls how modified the stage layout is. The higher the severity, the higher chance of a stage being completely unplayable."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <CheckBox Content="Modify Object Position" IsEnabled="{Binding TweakStageLayouts, Mode=OneWay}" IsChecked="{Binding TweakStageLayoutPos, Mode=TwoWay}"/>
                                <CheckBox Content="Modify Object Rotation" IsEnabled="{Binding TweakStageLayouts, Mode=OneWay}" IsChecked="{Binding TweakStageLayoutRot, Mode=TwoWay}"/>
                                <CheckBox Content="Modify Object Scale" IsEnabled="{Binding TweakStageLayouts, Mode=OneWay}" IsChecked="{Binding TweakStageLayoutSiz, Mode=TwoWay}"/>
                                <TextBlock Text="Miscellaneous" FontWeight="Bold" Margin="0,5,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Mismatch Stage Icons" IsChecked="{Binding MismatchedStages, Mode=TwoWay}"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This is automatically disabled if the version currently loaded is lower than v1.2.0, as part of the stage file was rewritten, allowing this randomization to work."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Width="350" Margin="5,0,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Environment" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Stage Environments" IsChecked="{Binding RandomStageEnv, Mode=TwoWay}" IsEnabled="{Binding !SwapStageEnv, Mode=OneWay}"/>
                                <CheckBox Content="Swap Stage Environments" IsChecked="{Binding SwapStageEnv, Mode=TwoWay}" IsEnabled="{Binding !RandomStageEnv, Mode=OneWay}"/>
                                <TextBlock Text="Environment Settings" FontWeight="Bold" Margin="0,5,0,5"/>
                                <TextBlock Text="Enable Randomize Stage Environments or Swap Stage Environments for options to appear!" TextWrapping="Wrap" Margin="0,5,0,5" Foreground="#FF808080">
                                    <TextBlock.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="!RandomStageEnv"/>
                                            <Binding Path="!SwapStageEnv"/>
                                        </MultiBinding>
                                    </TextBlock.IsVisible>
                                </TextBlock>
                                <CheckBox Content="Mix Day &amp; Night Environments" IsChecked="{Binding MixDayNightEnv, Mode=TwoWay}" IsVisible="{Binding SwapStageEnv, Mode=OneWay}"/>
                                <CheckBox Content="Randomize Fog Levels" IsChecked="{Binding RandomFogLevels, Mode=TwoWay}" IsVisible="{Binding RandomStageEnv, Mode=OneWay}"/>
                                <CheckBox Content="Randomize Lighting" IsChecked="{Binding RandomLighting, Mode=TwoWay}" IsVisible="{Binding RandomStageEnv, Mode=OneWay}"/>
                               <StackPanel Orientation="Horizontal" IsEnabled="{Binding RandomLighting, Mode=OneWay}" IsVisible="{Binding RandomStageEnv, Mode=OneWay}">
                                    <TextBlock Text="Intensity:" Margin="0,5,10,5"/>
                                    <Slider x:Name="EnvIntensityAmount"
                                        Minimum="1"
                                        Maximum="10"
                                        Value="{Binding EnvIntensity, Mode=TwoWay}"
                                        Margin="0,5,0,5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Width="150"/>
                                    <TextBlock Text="{Binding EnvIntensity}" Margin="10,5,0,5"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" VerticalAlignment="Center" Margin="5,-5,0,0" Foreground="#FF54A9FF">
                                        <ToolTip.Tip>
                                            <ToolTip Content="Level 7 and above may be stressful on the eyes. Take precautions if necessary."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>   
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Parameters + Ink">
                <StackPanel Orientation="Horizontal" Margin="5,20,5,10">
                    <StackPanel Width="350" Margin="0,0,5,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Parameters" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Multiplayer Weapons" IsChecked="{Binding RandomizeParameters, Mode=TwoWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Randomize Story Mode Weapons" IsChecked="{Binding RandomizeMsnParameters, Mode=TwoWay}"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="5,0,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="Not recommended as it causes softlocks within Hero Mode levels. However, very fun when used with some sort of anti-softlock protection!"/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <CheckBox Content="Randomize Salmon Run Weapons" IsChecked="{Binding RandomizeLoanedParams, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Side Order Weapons" IsEnabled="{Binding IsDLCLoaded, Mode=OneWay}" IsChecked="{Binding RandomizeSdodrParameters, Mode=TwoWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Randomization Level:" Margin="0,5,10,5"/>
                                    <Slider x:Name="ParameterScale"
                                        Minimum="1"
                                        Maximum="5"
                                        Value="{Binding ParameterSeverity, Mode=TwoWay}"
                                        Margin="0,5,0,5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Width="120"/>
                                    <TextBlock Text="{Binding ParameterSeverity}" Margin="10,5,0,5"/>
                                    <TextBlock Text="âš " FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="5,-5,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="The parameter randomization was developed with a severity of 2 in mind. Severity level 5 in particular may yield crashes on Splatanas and various weapons."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                    <StackPanel.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                            <Binding Path="RandomizeParameters"/>
                                            <Binding Path="RandomizeMsnParameters"/>
                                            <Binding Path="RandomizeSdodrParameters"/>
                                            <Binding Path="RandomizeLoanedParams"/>
                                        </MultiBinding>
                                    </StackPanel.IsVisible>
                                </StackPanel>
                                <TextBlock Text="Parameter Rules" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Keep Ink Consumption Under 100%" IsChecked="{Binding MaxInkConsume, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Weapon Weight" IsChecked="{Binding RandomizeWeaponWeight, Mode=TwoWay}"/>        
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Width="350" Margin="5,0,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Ink Appearance" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Ink Colors" IsChecked="{Binding RandomizeInkColors, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Color Lock Ink Colors" IsChecked="{Binding RandomizeInkColorLock, Mode=TwoWay}" IsVisible="{Binding RandomizeInkColors, Mode=OneWay}"/>
                                <CheckBox Content="Randomize Salmon Run Ink Colors" IsChecked="{Binding RandomizeInkColorCoop, Mode=TwoWay}" IsVisible="{Binding RandomizeInkColors, Mode=OneWay}"/>
                                <CheckBox Content="Randomize Hero Mode Ink Colors" IsChecked="{Binding RandomizeInkColorMsn, Mode=TwoWay}" IsVisible="{Binding RandomizeInkColors, Mode=OneWay}"/>
                                <CheckBox Content="Randomize Side Order Ink Colors" IsChecked="{Binding RandomizeInkColorSdodr, Mode=TwoWay}" IsEnabled="{Binding IsDLCLoaded, Mode=OneWay}" IsVisible="{Binding RandomizeInkColors, Mode=OneWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ink Lightness:" Margin="0,5,10,10"/>
                                    <Slider x:Name="ColorBias"
                                            Minimum="-64"
                                            Maximum="64"
                                            Value="{Binding InkColorBias, Mode=TwoWay}"
                                            Margin="0,5,0,10"
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True"
                                            Width="175"/>
                                    <TextBlock Text="{Binding InkColorBias}" Margin="10,5,0,10"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="5,-5,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This changes the brightness of the randomized ink colors. Positive numbers will provide lighter ink colors and negative numbers will provide darker ink colors."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                    <StackPanel.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                            <Binding Path="RandomizeInkColors"/>
                                            <Binding Path="RandomizeInkColorLock"/>
                                            <Binding Path="RandomizeInkColorMsn"/>
                                        </MultiBinding>
                                    </StackPanel.IsVisible>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Hero Mode">
                <StackPanel Orientation="Horizontal" Margin="5,20,5,10">
                    <StackPanel Width="350" Margin="0,0,5,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Weapon Selection" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Mission Weapons" IsChecked="{Binding RandomizeHeroWeapons, Mode=TwoWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Lock First Weapon" IsEnabled="{Binding RandomizeHeroWeapons, Mode=OneWay}" IsChecked="{Binding EnsureFirstHeroWeapon, Mode=TwoWay}"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This keeps the first weapon of each stage the same as the original game, while randomizing the other 2 avaliable weapons. This helps prevent softlocks from occurring."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Text="Miscellaneous" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Fuzzball Power Egg Cost" IsChecked="{Binding RandomizeFuzzballCost, Mode=TwoWay}"/>
                                <CheckBox Content="Shuffle Hero Gear Upgrade Tree" IsChecked="{Binding RandomizeHeroTree, Mode=TwoWay}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Customize Loot Anchor Egg Amount" IsChecked="{Binding RandomizeDigUpPointEggs, Mode=TwoWay}"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="This is mainly to stop softlocks from occurring where the player does not have enough eggs to progress."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" IsVisible="{Binding RandomizeDigUpPointEggs, Mode=OneWay}">
                                    <TextBlock Text="Egg Count:" Margin="0,5,10,10"/>
                                    <Slider x:Name="LootAnchorAmount"
                                            Minimum="25"
                                            Maximum="2500"
                                            Value="{Binding DigUpPointEggCount, Mode=TwoWay}"
                                            Margin="0,5,0,10"
                                            TickFrequency="25"
                                            IsSnapToTickEnabled="True"
                                            Width="175"/>
                                    <TextBlock Text="{Binding DigUpPointEggCount}" Margin="10,5,0,10"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Width="350" Margin="5,0,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Stage Order" FontWeight="Bold" Margin="0,5,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Randomize Crater Level Order" IsChecked="{Binding RandomizeKettlesCrater, Mode=TwoWay}"/>
                                    <TextBlock Text="ðŸ›ˆ" FontFamily="Segoe UI Symbol" Foreground="#FF54A9FF" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <ToolTip.Tip>
                                            <ToolTip Content="Level 1 of The Crater will not be randomized, as it is required for the game to work properly."/>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </StackPanel>
                                <CheckBox Content="Randomize Alterna Level Order" IsChecked="{Binding RandomizeKettles, Mode=TwoWay}"/>
                                <TextBlock Text="Stage Rewards" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Level Clear Reward" IsChecked="{Binding RandomizeLevelReward, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Level Fee" IsChecked="{Binding RandomizeLevelFee, Mode=TwoWay}"/>
                                <TextBlock Text="Stage Attributes" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Stage Skybox" IsChecked="{Binding RandomizeStageSkybox, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Stage BGM" IsChecked="{Binding RandomizeStageMusic, Mode=TwoWay}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Salmon Run">
                <StackPanel Orientation="Horizontal" Margin="5,20,5,10">
                    <StackPanel Width="350" Margin="0,0,5,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10,10,10">
                            <StackPanel>
                                <TextBlock Text="Loaned Weapons &amp; Kits" FontWeight="Bold" Margin="0,5,0,5"/>
                                <CheckBox Content="Randomize Splat Bomb" IsChecked="{Binding RandomizeLoanedSub, Mode=TwoWay}"/>
                                <CheckBox Content="Randomize Usable Specials" IsChecked="{Binding RandomizeLoanedSpecials, Mode=TwoWay}" IsEnabled="{Binding !AllSpecialsLoanable, Mode=OneWay}"/>
